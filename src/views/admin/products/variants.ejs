<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Variantes del Producto</title>
  <link rel="stylesheet" href="/Styles/bootstrap.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-light p-4">
  <div class="container mt-4">
    <h2 class="fw-semibold border-bottom pb-2 mb-4">Variantes de: <%= producto.nom_producto %></h2>

    <a href="/admin/products" class="btn btn-secondary btn-sm mb-3">
      <i class="fas fa-arrow-left"></i> Volver
    </a>

    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Talla</th>
            <th>Stock</th>
            <th>Precio</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% variantes.forEach(v => { %>
            <tr>
              <td><%= v.id_var %></td>
              <td><%= v.nom_talla %></td>
              <td><%= v.stock_var %></td>
              <td>$<%= v.precio_var %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <form method="POST" action="/admin/products/variants/delete/<%= v.id_var %>/<%= producto.id_producto %>" onsubmit="return confirm('Â¿Eliminar variante?')">
                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                  </form>
                  <form method="POST" action="/admin/products/variants/update/<%= v.id_var %>" class="d-inline-flex gap-1">
                    <input type="hidden" name="producto_id" value="<%= producto.id_producto %>">
                    <select name="talla_id_talla" class="form-select form-select-sm" required>
                      <% tallas.forEach(t => { %>
                        <option value="<%= t.id_talla %>" <%= v.talla_id_talla === t.id_talla ? 'selected' : '' %>><%= t.nom_talla %></option>
                      <% }) %>
                    </select>
                    <input type="number" name="stock_var" value="<%= v.stock_var %>" class="form-control form-control-sm" min="0" required>
                    <input type="number" name="precio_var" step="0.01" value="<%= v.precio_var %>" class="form-control form-control-sm" required>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i></button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <h5 class="mt-4 mb-3">Agregar nueva variante</h5>
    <form method="POST" action="/admin/products/variants/create" class="row g-3">
      <input type="hidden" name="producto_id" value="<%= producto.id_producto %>">
      <div class="col-md-3">
        <select name="talla_id_talla" class="form-select" required>
          <% tallas.forEach(t => { %>
            <option value="<%= t.id_talla %>"><%= t.nom_talla %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-3">
        <input type="number" name="stock_var" class="form-control" placeholder="Stock" min="0" required>
      </div>
      <div class="col-md-3">
        <input type="number" name="precio_var" class="form-control" placeholder="Precio" step="0.01" required>
      </div>
      <div class="col-md-3 d-grid">
        <button type="submit" class="btn btn-success">
          <i class="fas fa-plus"></i> Agregar Variante
        </button>
      </div>
    </form>
  </div>
</body>
</html>
