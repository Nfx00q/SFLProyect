<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>SFL Admin - Productos</title>
    <link rel="stylesheet" href="/Styles/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  </head>
  <body class="p-4">
    <div class="container mt-4">
    <h2 class="fw-semibold border-bottom pb-2 mb-4">Gestión de Productos</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#modalCreate">
        <i class="fas fa-plus"></i> Nuevo Producto
      </button>
    </div>

    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(producto => { %>
            <tr>
              <td><%= producto.id_producto %></td>
              <td><%= producto.nom_producto %></td>
              <td><%= producto.des_producto %></td>
              <td>$<%= producto.precio_producto %></td>
              <td><%= producto.categoria_id_categoria %></td>
              <td>
                <% if (producto.url_img) { %>
                  <img src="/Clothes/<%= producto.url_img %>" class="img-thumbnail" style="width: 60px;">
                <% } else { %>
                  <span class="text-muted">Sin imagen</span>
                <% } %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <button class="btn btn-primary"
                          data-bs-toggle="modal"
                          data-bs-target="#modalEdit"
                          data-id="<%= producto.id_producto %>"
                          data-nombre="<%= producto.nom_producto %>"
                          data-descripcion="<%= producto.des_producto %>"
                          data-precio="<%= producto.precio_producto %>"
                          data-categoria="<%= producto.categoria_id_categoria %>"
                          data-urlimg="<%= producto.url_img %>">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-danger"
                          data-bs-toggle="modal"
                          data-bs-target="#modalDelete"
                          data-id="<%= producto.id_producto %>"
                          data-nombre="<%= producto.nom_producto %>">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                  <a href="/admin/products/variants/<%= producto.id_producto %>" class="btn btn-secondary">
                    <i class="fas fa-tags"></i>
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

    <!-- Modal Crear -->
    <div
      class="modal fade"
      id="modalCreate"
      tabindex="-1"
      aria-labelledby="modalCreateLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <form
          action="/admin/products/create"
          method="POST"
          class="modal-content"
        >
          <div class="modal-header">
            <h5 class="modal-title" id="modalCreateLabel">Crear Producto</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            ></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="nom_producto_create" class="form-label">Nombre</label>
              <input
                type="text"
                name="nom_producto"
                id="nom_producto_create"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="des_producto_create" class="form-label"
                >Descripción</label
              >
              <textarea
                name="des_producto"
                id="des_producto_create"
                class="form-control"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="precio_producto_create" class="form-label"
                >Precio</label
              >
              <input
                type="number"
                step="0.01"
                name="precio_producto"
                id="precio_producto_create"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="categoria_id_create" class="form-label"
                >Categoría ID</label
              >
              <input
                type="number"
                name="categoria_id_categoria"
                id="categoria_id_create"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <label for="url_img_create" class="form-label">URL Imagen</label>
              <input
                type="text"
                name="url_img"
                id="url_img_create"
                class="form-control"
                placeholder="URL de la imagen"
              />
              <!-- Si quieres subir archivo desde aquí, habría que usar multer para subir archivos -->
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
            <button type="submit" class="btn btn-success">Crear</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Modal Editar -->
    <div
      class="modal fade"
      id="modalEdit"
      tabindex="-1"
      aria-labelledby="modalEditLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <form id="formEdit" method="POST" class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalEditLabel">Editar Producto</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            ></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="id_producto" id="edit_id" />
            <div class="mb-3">
              <label for="nom_producto_edit" class="form-label">Nombre</label>
              <input
                type="text"
                name="nom_producto"
                id="nom_producto_edit"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="des_producto_edit" class="form-label"
                >Descripción</label
              >
              <textarea
                name="des_producto"
                id="des_producto_edit"
                class="form-control"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="precio_producto_edit" class="form-label"
                >Precio</label
              >
              <input
                type="number"
                step="0.01"
                name="precio_producto"
                id="precio_producto_edit"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="categoria_id_edit" class="form-label"
                >Categoría ID</label
              >
              <input
                type="number"
                name="categoria_id_categoria"
                id="categoria_id_edit"
                class="form-control"
              />
            </div>
            <div class="mb-3">
              <label for="url_img_edit" class="form-label">URL Imagen</label>
              <input
                type="text"
                name="url_img"
                id="url_img_edit"
                class="form-control"
              />
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
            <button type="submit" class="btn btn-primary">
              Guardar Cambios
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Modal Eliminar -->
    <div
      class="modal fade"
      id="modalDelete"
      tabindex="-1"
      aria-labelledby="modalDeleteLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <form id="formDelete" method="POST" class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalDeleteLabel">Eliminar Producto</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            ></button>
          </div>
          <div class="modal-body">
            <p>
              ¿Estás seguro que quieres eliminar el producto
              <strong id="deleteProductoNombre"></strong>?
            </p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
            <button type="submit" class="btn btn-danger">Eliminar</button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Cuando se abre el modal de Editar, rellenar los inputs con los datos del botón pulsado
      const modalEdit = document.getElementById("modalEdit");
      modalEdit.addEventListener("show.bs.modal", function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute("data-id");
        const nombre = button.getAttribute("data-nombre");
        const descripcion = button.getAttribute("data-descripcion");
        const precio = button.getAttribute("data-precio");
        const categoria = button.getAttribute("data-categoria");
        const urlimg = button.getAttribute("data-urlimg");

        document.getElementById("edit_id").value = id;
        document.getElementById("nom_producto_edit").value = nombre;
        document.getElementById("des_producto_edit").value = descripcion;
        document.getElementById("precio_producto_edit").value = precio;
        document.getElementById("categoria_id_edit").value = categoria;
        document.getElementById("url_img_edit").value = urlimg;

        // Cambiar action del form para el POST correcto
        document.getElementById(
          "formEdit"
        ).action = `/admin/products/update/${id}`;
      });

      // Modal Eliminar
      const modalDelete = document.getElementById("modalDelete");
      modalDelete.addEventListener("show.bs.modal", function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute("data-id");
        const nombre = button.getAttribute("data-nombre");

        document.getElementById("deleteProductoNombre").textContent = nombre;
        // Cambiar action del form para el POST correcto
        document.getElementById(
          "formDelete"
        ).action = `/admin/products/delete/${id}`;
      });
    </script>
  </body>
</html>
