<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Detalle de Usuario</title>
    <link rel="stylesheet" href="/Styles/bootstrap.css" />
  </head>
  <body class="p-4">
    <div class="container">
      <h1 class="mb-4" style="text-align: center">
        Perfil de <%= usuario.nom_us %>
      </h1>

      <div class="accordion" id="userDetailsAccordion">
        <!-- Datos Personales -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingDatosPersonales">
            <button
              class="accordion-button"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseDatosPersonales"
              aria-expanded="true"
              aria-controls="collapseDatosPersonales"
            >
              Datos Personales
            </button>
          </h2>
          <div
            id="collapseDatosPersonales"
            class="accordion-collapse collapse show"
            aria-labelledby="headingDatosPersonales"
            data-bs-parent="#userDetailsAccordion"
          >
            <div class="accordion-body">
              <p><strong>Nombre:</strong> <%= usuario.nom_us %></p>
              <p><strong>ID:</strong> <%= usuario.id_us %></p>
              <p><strong>Email:</strong> <%= usuario.mail_us %></p>
              <p>
                <strong>Teléfono:</strong> +56
                <span id="telUsuario"
                  ><%= usuario.tel_us || 'No registrado' %></span
                >
              </p>
              <p><strong>Rol:</strong> <%= rol?.nom_rol || 'Sin rol' %></p>
            </div>
          </div>
        </div>

        <!-- Dirección -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingDireccion">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseDireccion"
              aria-expanded="false"
              aria-controls="collapseDireccion"
            >
              Dirección
            </button>
          </h2>
          <div
            id="collapseDireccion"
            class="accordion-collapse collapse"
            aria-labelledby="headingDireccion"
            data-bs-parent="#userDetailsAccordion"
          >
            <div class="accordion-body">
              <% if (direccion) { %>
              <p>
                <strong>Direccion:</strong> <%= direccion.calle %>, <%=
                direccion.ciudad %>, <%= direccion.comuna %>,<%=
                direccion.region %>,<%= direccion.cod_postal %>,<%=
                direccion.pais %>
              </p>
              <% } else { %>
              <p>Sin dirección registrada</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Carrito -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingCarrito">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseCarrito"
              aria-expanded="false"
              aria-controls="collapseCarrito"
            >
              Carrito
            </button>
          </h2>
          <div
            id="collapseCarrito"
            class="accordion-collapse collapse"
            aria-labelledby="headingCarrito"
            data-bs-parent="#userDetailsAccordion"
          >
            <div class="accordion-body">
              <% if (carrito && carrito.length > 0) { %>
              <ul>
                <% carrito.forEach(item => { %>
                <li>
                  ID Carrito: <%= item.id_carrito %> - Fecha: <%= new
                  Date(item.fec_carrito).toLocaleString() %> - Estado: <%=
                  item.es_carrito %>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p>Carrito vacío</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Pedidos -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingPedidos">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapsePedidos"
              aria-expanded="false"
              aria-controls="collapsePedidos"
            >
              Pedidos
            </button>
          </h2>
          <div
            id="collapsePedidos"
            class="accordion-collapse collapse"
            aria-labelledby="headingPedidos"
            data-bs-parent="#userDetailsAccordion"
          >
            <div class="accordion-body">
              <% if (pedidos && pedidos.length > 0) { %>
              <ul>
                <% pedidos.forEach(pedido => { %>
                <li>
                  ID Pedido: <%= pedido.id_pedido %> - Estado: <%=
                  pedido.est_pedido %> - Total: $<%= pedido.total_pedido %> -
                  Fecha: <%= new Date(pedido.hora_fecha).toLocaleString() %>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p>Sin pedidos</p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Envíos -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingEnvios">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseEnvios"
              aria-expanded="false"
              aria-controls="collapseEnvios"
            >
              Envíos
            </button>
          </h2>
          <div
            id="collapseEnvios"
            class="accordion-collapse collapse"
            aria-labelledby="headingEnvios"
            data-bs-parent="#userDetailsAccordion"
          >
            <div class="accordion-body">
              <% if (envios && envios.length > 0) { %>
              <ul>
                <% envios.forEach(envio => { %>
                <li>
                  ID Envío: <%= envio.id_envio %> - Número de Seguimiento: <%=
                  envio.num_segui %> - Transportista: <%= envio.transp %> -
                  Estado: <%= envio.est_envio %>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p>Sin envíos</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <a href="/admin/users" class="btn btn-secondary mt-4">Volver</a>
    </div>

    <script src="/JS/usersDetails.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
