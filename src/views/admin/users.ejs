<%- include('../partials/header', { title: 'Usuarios' }) %>
<div class="container py-4">
  <h1>Usuarios</h1>
  <a href="/admin/users/new" class="btn btn-success mb-3">Crear Usuario</a>
  <table class="table">
    <!-- encabezado… -->
    <tbody>
      <% usuario.forEach(u => { %>
        <tr>
          <td><%= u.id_us %></td>
          <td><%= u.nom_us %></td>
          <td><%= u.mail_us %></td>
          <td><%= u.nom_rol %></td>
          <td><%= u.nom_est %></td>
          <td class="d-flex gap-2">
            <a href="/admin/users/<%= u.id_us %>/edit" class="btn btn-primary btn-sm">Editar</a>
            <form action="/admin/users/<%= u.id_us %>?_method=DELETE" method="POST" onsubmit="return confirm('¿Seguro?')">
              <button class="btn btn-danger btn-sm">Eliminar</button>
            </form>
            <a href="/admin/users/<%= u.id_us %>" class="btn btn-info btn-sm">Ver</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
