<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <title>SFL - Catalogo</title>
  <style>
    .product-card {
      display: none;
    }

    /* oculto por defecto, JS lo mostrará */
  </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="Styles/bootstrap.css" />
  <script src="https://kit.fontawesome.com/65448a561c.js" crossorigin="anonymous"></script>
</head>

<body>

  <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="Images/banner-image.png" alt="" width="120px" />
      </a>
      <button class="navbar-toggler no-border-toggle" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" id="sale-link" href="#">Ofertas
              <span class="visually-hidden">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Temporada</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Catalogo</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <div style="display: block; text-align: center;">
      <img src="Images/catalog-image.png" alt="" width="200px">
    </div>

    <!-- Filtro de categoría -->
    <div class="mb-4">
      <label for="categoryFilter" class="form-label">Filtrar por categoría:</label>
      <select class="form-select" id="categoryFilter">
        <option value="all">Todas las categorías</option>
        <% Object.keys(categorias).forEach(catId=> { %>
          <option value="cat-<%= catId %>">
            <%= categorias[catId].nombre %>
          </option>
          <% }) %>
      </select>
    </div>

    <!-- Tarjetas de productos -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% Object.keys(categorias).forEach(catId=> { const cat =
        categorias[catId]; cat.productos.forEach(producto => { %>
        <div class="col product-card cat-<%= catId %>">
          <div class="card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= producto.nombre %>
              </h5>
              <p class="card-text text-muted">
                <%= producto.descripcion %>
              </p>
              <p class="card-text fw-bold mt-auto">
                $<%= producto.precio.toFixed(0) %>
              </p>
              <button class="btn btn-outline-primary mt-2">
                <i class="fas fa-shopping-cart"></i> Agregar
              </button>
            </div>
          </div>
        </div>
        <% }) }) %>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const filter = document.getElementById("categoryFilter");
      const cards = document.querySelectorAll(".product-card");

      const showCards = (category) => {
        cards.forEach((card) => {
          if (category === "all" || card.classList.contains(category)) {
            card.style.display = "block";
          } else {
            card.style.display = "none";
          }
        });
      };

      filter.addEventListener("change", () => {
        showCards(filter.value);
      });

        // Mostrar todas al inicio
        showCards("all");
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  <footer
    class="bg-light text-center text-muted py-4 mt-5 no-border-toggle fixed-bottom"
  >
    <div class="container">
      <p class="mb-1">© 2025 SoloFlayba. Todos los derechos reservados.</p>
      <p class="mb-0">
        <a href="#" class="text-muted me-3">Términos</a>
        <a href="#" class="text-muted">Privacidad</a>
      </p>
    </div>
  </footer>
</html>