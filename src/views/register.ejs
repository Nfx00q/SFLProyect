<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registro de Usuario</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="/Styles/bootstrap.css">

  <!-- Mapbox -->
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet">
  <link href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.css" rel="stylesheet">

  <link rel="stylesheet" href="/Styles/session.css">
</head>
<body>

  <div class="form-container">
    <h3 class="text-center mb-4">Crear Cuenta</h3>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <form action="/register" method="POST" autocomplete="off">
      <div class="mb-3">
        <label for="nom_us" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nom_us" name="nom_us" required>
      </div>

      <div class="mb-3">
        <label for="mail_us" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="mail_us" name="mail_us" required>
      </div>

      <div class="mb-3">
        <label for="pass_us" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="pass_us" name="pass_us" required>
      </div>

      <div class="mb-3">
        <label for="tel_us" class="form-label">Teléfono</label>
        <input type="tel" class="form-control" id="tel_us" name="tel_us">
      </div>

      <div class="mb-3">
        <label class="form-label">Dirección</label>
        <div id="geocoder-container"></div>
      </div>

      <!-- Hidden inputs (rellenados por Mapbox) -->
      <input type="hidden" name="calle" id="calle">
      <input type="hidden" name="ciudad" id="ciudad">
      <input type="hidden" name="region" id="region">
      <input type="hidden" name="cod_postal" id="cod_postal">
      <input type="hidden" name="pais" id="pais">

      <button type="submit" class="btn btn-dark w-100 mt-3">Registrarse</button>
    </form>
  </div>

  <!-- JS de Mapbox -->
  <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
  <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>

  <!-- Script que inicializa Mapbox -->
  <script src="/js/mapboxAddressAutocomplete.js"></script>
</body>
</html>
