<%- include('./partials/header', { title: 'Mi Carrito' }) %>

<div class="container mt-5 mb-5">
  <h2 class="mb-4 text-dark fw-bold"><i class="fas fa-shopping-cart me-2"></i>Mi Carrito</h2>

  <% if (carrito.length === 0) { %>
    <div class="container text-center my-5">
      <div class="card border-0 shadow-sm p-4">
        <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
        <h4 class="text-secondary">Tu carrito está vacío</h4>
        <p class="text-muted">Parece que aún no has agregado productos.</p>
        <a href="/catalog" class="btn btn-outline-primary mt-2">
          <i class="fas fa-store"></i> Ir al catálogo
        </a>
      </div>
    </div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-dark text-center">
          <tr>
            <th>Producto</th>
            <th>Talla</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody class="text-center align-middle">
          <% let total = 0; %>
          <% carrito.forEach(item => { 
            const subtotal = Number(item.precio) * item.cantidad;
            total += subtotal;
          %>
            <tr>
              <td><%= item.nom_producto %></td>
              <td><%= item.nom_talla %></td>
              <td><%= item.cantidad %></td>
              <td>$<%= Number(item.precio).toLocaleString('es-CL') %></td>
              <td>$<%= subtotal.toLocaleString('es-CL') %></td>
              <td>
                <a href="/shop-cart/remove/<%= item.id || item.id_producto_carrito %>" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i> Eliminar
                </a>
              </td>
            </tr>
          <% }); %>
        </tbody>
        <tfoot>
          <tr class="table-dark">
            <td colspan="4" class="text-end"><strong>Total:</strong></td>
            <td colspan="2"><strong>$<%= total.toLocaleString('es-CL') %></strong></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="text-end mt-3">
      <form action="/payment/checkout" method="POST">
        <button type="submit" class="btn btn-success btn-lg shadow-sm">
          <i class="fas fa-credit-card me-2"></i> Pagar ahora
        </button>
      </form>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
