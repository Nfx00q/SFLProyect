<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Carrito de Compras</title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- tu archivo CSS -->
</head>
<body>
  <h1>ğŸ›’ Carrito de Compras</h1>

  <% if (productos.length === 0) { %>
    <p>Tu carrito estÃ¡ vacÃ­o.</p>
  <% } else { %>
    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>Imagen</th>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Subtotal</th>
          <th>AcciÃ³n</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(producto => { %>
          <tr>
            <td>
              <% if (producto.url_imagen) { %>
                <img src="<%= producto.url_imagen %>" alt="Imagen" width="80">
              <% } else { %>
                <em>Sin imagen</em>
              <% } %>
            </td>
            <td><%= producto.nom_producto %></td>
            <td>$<%= producto.precio.toFixed(2) %></td>
            <td><%= producto.cantidad %></td>
            <td>$<%= (producto.precio * producto.cantidad).toFixed(2) %></td>
            <td>
              <form action="/shop-cart/eliminar" method="POST">
                <input type="hidden" name="id_producto" value="<%= producto.id_producto %>">
                <button type="submit">âŒ Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h3>Total: $<%= total.toFixed(2) %></h3>

    <form action="/shop-cart/finalizar" method="POST">
      <button type="submit">âœ… Finalizar Compra</button>
    </form>
  <% } %>

  <p><a href="/">â† Seguir comprando</a></p>
</body>
</html>
