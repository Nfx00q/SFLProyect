<%- include('partials/header') %>

<div class="container mt-5">
  <h2>¡Pago aprobado!</h2>
  <p>Gracias por tu compra. Aquí está tu comprobante:</p>

  <h4>Pedido N° <%= pedidoId %></h4>
  <ul class="list-group mb-4">
    <% items.forEach(item => { %>
      <li class="list-group-item">
        <strong><%= item.nom_producto || item.name %></strong><br>
        Cantidad: <%= item.cantidad %><br>
        Precio unitario: $<%= Number(item.precio_var || item.price).toFixed(0) %>
      </li>
    <% }) %>
  </ul>

  <h5>Total pagado: $<%= total %></h5>

  <a href="/catalog" class="btn btn-primary mt-3">Volver al catálogo</a>
</div>

<%- include('partials/footer') %>
