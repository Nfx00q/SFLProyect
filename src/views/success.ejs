<%- include('partials/header') %>

<div class="container mt-5">
  <div class="card shadow p-4">
    <h2 class="text-success text-center mb-4">✅ ¡Gracias por tu compra!</h2>
    <p class="text-center">Tu pedido ha sido registrado correctamente.</p>

    <hr />

    <h5><strong>N° de Pedido:</strong> <%= pedidoId %></h5>
    <h5><strong>Total pagado:</strong> $<%= total.toLocaleString('es-CL') %></h5>

    <h4 class="mt-4">🛍️ Productos comprados:</h4>
    <ul class="list-group mt-2">
      <% productos.forEach(prod => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= prod.cantidad %> x <strong><%= prod.nom_producto %></strong>
            <span>$<%= (prod.precio * prod.cantidad).toLocaleString('es-CL') %></span>
        </li>
      <% }) %>
    </ul>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-primary">Volver al inicio</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
